<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/White">
    <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@id/left_drawer"
            android:layout_width="260dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:dividerHeight="0dp"
            android:background="@color/White">

        <RelativeLayout
                android:id="@+id/slidebar_rlTopBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/slidebar_ivTopBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menubar"
                    android:layout_alignParentTop="true"/>
            <EditText
                    android:id="@+id/slidebar_etSearch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingLeft="3dp"
                    android:hint="@string/hint_search"
                    android:drawableLeft="@drawable/slidebar_search_icon"
                    android:background="@drawable/edittext_custom"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"/>

        </RelativeLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/slidebar_ivAvatar"
                android:background="@drawable/slidebar_avatar_icon"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/slidebar_rlTopBar"
                android:layout_margin="7dp"/>
        <RelativeLayout
                android:id="@+id/slidebar_rlProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/slidebar_rlTopBar"
                android:layout_toRightOf="@+id/slidebar_ivAvatar"
                android:layout_alignTop="@+id/slidebar_ivAvatar"
                android:layout_alignBottom="@+id/slide_ivAvatar">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/slidebar_tvSong"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:textSize="13sp"
                    android:id="@+id/slidebar_tvSongArt"
                    android:layout_below="@id/slidebar_tvSong"
                    android:layout_alignBottom="@id/slide_ivAvatar"/>
            <ImageView
                    android:id="@+id/slide_ivNextEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/slidebar_nexttooption"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/slide_ivEditProfile"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/slidebar_profile"
                    android:layout_toLeftOf="@id/slide_ivNextEditProfile"
                    android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/slidebar_rlContaintListView"
                android:layout_below="@+id/slidebar_rlProfile">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/slidebar_tvBarMiddle"
                    android:background="@color/Black"/>
            <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/slidebar_listOption"
                    android:layout_below="@id/slidebar_tvBarMiddle"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>