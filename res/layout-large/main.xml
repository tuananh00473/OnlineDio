<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlBackground"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <ImageView
            android:layout_width="@dimen/tablet_width_logo"
            android:layout_height="@dimen/tablet_heigh_logo"
            android:id="@+id/ivLogo"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:paddingTop="120dp"
            />
    <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/footer"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/tablet_text_footer_size"
            />
    <Button
            android:id="@+id/btSignUp"
            android:layout_width="@dimen/tablet_width_button"
            android:layout_height="@dimen/tablet_heigh_button"
            android:background="@drawable/signup"
            android:layout_alignParentRight="true" android:layout_marginRight="20dp"
            android:layout_above="@id/tvFooter" android:layout_marginBottom="20dp"/>
    <Button
            android:id="@+id/btLogin"
            android:layout_width="@dimen/tablet_width_button"
            android:layout_height="@dimen/tablet_heigh_button"
            android:background="@drawable/login"
            android:layout_toLeftOf="@id/btSignUp" android:layout_marginRight="20dp"
            android:layout_above="@id/tvFooter" android:layout_marginBottom="20dp"/>
    <Button
            android:id="@+id/btLoginFb"
            android:layout_width="@dimen/tablet_width_button"
            android:layout_height="@dimen/tablet_heigh_button"
            android:background="@drawable/login_fb"
            android:layout_toLeftOf="@id/btLogin" android:layout_marginRight="20dp"
            android:layout_above="@id/tvFooter" android:layout_marginBottom="20dp"/>
</RelativeLayout>

