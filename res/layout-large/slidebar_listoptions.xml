<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selection"
                android:padding="@dimen/tablet_slidebar_padding">
    <ImageView
            android:id="@+id/slidebar_ivOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slidebar_home"
            android:contentDescription="@string/imageview_description"/>
    <TextView
            android:id="@+id/slidebar_tvOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slidebar_tittle_item"
            android:textSize="@dimen/tablet_text_size"
            android:layout_marginLeft="@dimen/tablet_margin"
            android:layout_toRightOf="@id/slidebar_ivOption"
            android:layout_centerVertical="true"
            />
    <ImageView
            android:id="@+id/slidebar_ivNextToOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/tablet_margin"
            android:contentDescription="@string/imageview_description"/>
    <TextView
            android:id="@+id/slidebar_tvSpecOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tablet_text_size"
            android:layout_marginRight="@dimen/tablet_margin"
            android:layout_toLeftOf="@+id/slidebar_ivNextToOption"
            android:layout_centerVertical="true"/>
</RelativeLayout>