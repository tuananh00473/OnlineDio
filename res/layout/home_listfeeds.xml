<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_list_feed_selection"
                android:padding="@dimen/phone_padding">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_ivAvatar"
            android:background="@drawable/home_avatar">

    </ImageView>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/home_ivAvatar"
            android:layout_alignBottom="@id/home_ivAvatar"
            android:layout_toRightOf="@id/home_ivAvatar"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/phone_margin"
            >
        <TextView
                android:id="@+id/home_tvSoundTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tittle_song"
                android:textSize="@dimen/phone_home_tittle_song_text_size"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:typeface="sans"/>
        <TextView
                android:id="@+id/home_tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tittle_singer"
                android:textSize="@dimen/phone_text_size"
                android:textColor="@color/Black"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/home_tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tittle_like"
                android:textSize="@dimen/phone_home_tittle_like_text_size"
                android:layout_alignParentBottom="true"/>
        <TextView
                android:id="@+id/home_tvNumberComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tittle_comment"
                android:textSize="@dimen/phone_home_tittle_comment_text_size"
                android:layout_toRightOf="@id/home_tvSoundTitle"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        <ImageView
                android:id="@+id/home_ivNextDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/phone_margin_component"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/home_tvDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tittle_show"
                android:textSize="@dimen/phone_home_tittle_comment_text_size"
                android:layout_toLeftOf="@id/home_ivNextDetail"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>